{{define "title"}}
    New recipe
{{end}}


{{define "content"}}
    <form>
        <fieldset>
            <label>
                Name
                <input name="name" placeholder="Name" />
            </label>
            <label>
                Type
                <select name="type" aria-label="Select type..." required>
                    <option></option>
                    <option>wire</option>
                    <option>rod</option>
                    <option>smelter</option>
                </select>
            </label>
        </fieldset>

        <div class="grid">
            <div>
                <label>Ingredients</label>
                <button type="button" hx-get="/item-popup" hx-target="this" hx-swap="beforebegin">Add</button>
            </div>
            <div>
                <label>Results</label>
                <button type="button" hx-get="/item-popup" hx-target="this" hx-swap="beforebegin">Add</button>
            </div>
        </div>

        <input type="submit" value="Create" />
    </form>
{{end}}


